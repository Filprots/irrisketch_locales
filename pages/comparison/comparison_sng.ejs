<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <p class="lead"><%= __("ComparisonPage_Subtitle") %></p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-sm">
                    <colgroup>
                        <col style="width: 25%;">
                        <col style="width: 25%;">
                        <col style="width: 25%;">
                        <col style="width: 25%;">
                    </colgroup>
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="text-center align-middle"><%= __("ComparisonPage_Features") %></th>
                            <th scope="col" class="text-center">
                                <div class="py-3">
                                    <h5><%= __("ComparisonPage_FreePlan") %></h5>
                                    <p class="mb-0 small"><%= __("ComparisonPage_FreeText") %></p>
                                </div>
                            </th>
                            <th scope="col" class="text-center">
                                <div class="py-3">
                                    <h5><%= __("ComparisonPage_FreeTrial") %></h5>
                                    <p class="mb-0 small"><%= __("ComparisonPage_LimitedTime") %></p>
                                </div>
                            </th>
                            <th scope="col" class="text-center bg-primary text-white">
                                <div class="py-3">
                                    <h5><%= __("ComparisonPage_ProPlan") %></h5>
                                    <p class="mb-0 small"><%= __("ComparisonPage_FullAccess") %></p>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        <!-- Projects Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_Projects") %></th>
                            <td class="text-center align-middle"><%= __("ComparisonPage_FreeProjects") %></td>
                            <td class="text-center align-middle"><%= __("ComparisonPage_LimitedProjects") %></td>
                            <td class="text-center align-middle bg-light"><%= __("ComparisonPage_UnlimitedProjects") %></td>
                        </tr>

                        <!-- Layouts Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_Layouts") %></th>
                            <td class="text-center align-middle"><%= __("ComparisonPage_FreeLayouts") %></td>
                            <td class="text-center align-middle"><%= __("ComparisonPage_LimitedLayouts") %></td>
                            <td class="text-center align-middle bg-light"><%= __("ComparisonPage_UnlimitedLayouts") %></td>
                        </tr>

                        <!-- Canvas Size Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_CanvasSize") %></th>
                            <td class="text-center align-middle"><%= __("ComparisonPage_SmallCanvas") %></td>
                            <td class="text-center align-middle"><%= __("ComparisonPage_MediumCanvas") %></td>
                            <td class="text-center align-middle bg-light"><%= __("ComparisonPage_LargeCanvas") %></td>
                        </tr>

                        <!-- Specs Sheets Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_SpecsSheets") %></th>
                            <td class="text-center align-middle"><%= __("ComparisonPage_LimitedSpecs") %></td>
                            <td class="text-center align-middle"><%= __("ComparisonPage_BasicSpecs") %></td>
                            <td class="text-center align-middle bg-light"><%= __("ComparisonPage_FullSpecs") %></td>
                        </tr>

                        <!-- Export Options Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_ExportOptions") %></th>
                            <td class="text-center align-middle"><%= __("ComparisonPage_BasicExport") %></td>
                            <td class="text-center align-middle"><%= __("ComparisonPage_LimitedExport") %></td>
                            <td class="text-center align-middle bg-light"><%= __("ComparisonPage_FullExport") %></td>
                        </tr>


                        <!-- Equipment Pack Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_EquipmentPack") %></th>
                            <td class="text-center align-middle"><i class="far fa-times-circle text-danger"></i></td>
                            <td class="text-center align-middle"><i class="far fa-times-circle text-danger"></i></td>
                            <td class="text-center align-middle bg-light"><i class="far fa-check-circle text-success"></i></td>
                        </tr>

                        <!-- Design Studio Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_DesignStudio") %></th>
                            <td class="text-center align-middle"><i class="far fa-times-circle text-danger"></i></td>
                            <td class="text-center align-middle"><i class="far fa-times-circle text-danger"></i></td>
                            <td class="text-center align-middle bg-light"><i class="far fa-check-circle text-success"></i></td>
                        </tr>

                        <!-- Action Row -->
                        <tr>
                            <th scope="row" class="align-middle"><%= __("ComparisonPage_GetStarted") %></th>
                            <td class="text-center align-middle">
                                <a href="/register" class="btn btn-outline-primary"><%= __("ComparisonPage_SignUp") %></a>
                            </td>
                            <td class="text-center align-middle">
                                <a href="/register" class="btn btn-outline-primary"><%= __("ComparisonPage_TryFree") %></a>
                            </td>
                            <td class="text-center align-middle bg-light">
                                <a href="/account/subscription" class="btn btn-primary"><%= __("ComparisonPage_OrderPro") %></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

