<hr>

<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center"><%= __(('irris_browser')) %></h2>

        <div class="card mb-4">
            <div class="card-body">
                <style>
                    /* Enhance Bootstrap active state to match original design */
                    .list-group-item.active {
                        border-color: #28a745 !important;
                        background-color: #f0fff0 !important;
                        color: inherit !important;
                    }
                </style>
                <h4 class="card-title"><%= __(('select_platform')) %></h4>

                <div class="list-group">
                    <div class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2" id="windows-file">
                        <div class="text-primary me-3">
                            <i class="fa fa-windows fs-4"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-bold">IRRISBrowser.RU-0.0.1.exe</div>
                            <div class="text-muted small"><%= __(('win64install')) %></div>
                        </div>
                        <a href="http://irrisketch.ru/eassets/browser/IRRISBrowser.RU-0.0.1.exe" class="btn btn-success" target="_blank"><%= __(('download')) %></a>
                    </div>

                    <div class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2" id="linux-file">
                        <div class="text-primary me-3">
                            <i class="fa fa-linux fs-4"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-bold">IRRISBrowser.RU-0.0.1_amd64.deb</div>
                            <div class="text-muted small"><%= __(('linux_deb_package')) %></div>
                        </div>
                        <a href="http://irrisketch.ru/eassets/browser/IRRISBrowser.RU-0.0.1_amd64.deb" class="btn btn-success" target="_blank"><%= __(('download')) %></a>
                    </div>

                    <div class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2" id="mac-file">
                        <div class="text-primary me-3">
                            <i class="fa fa-apple fs-4"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-bold">IRRISBrowser.RU-0.0.1_arm64.dmg</div>
                            <div class="text-muted small"><%= __(('mac_arm64_image')) %></div>
                        </div>
                        <a href="http://irrisketch.ru/eassets/browser/IRRISBrowser.RU-0.0.1_arm64.dmg" class="btn btn-success" target="_blank"><%= __(('download')) %></a>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Detect user's platform
                var userAgent = navigator.userAgent.toLowerCase();
                var isWindows = userAgent.indexOf('windows') !== -1;
                var isLinux = userAgent.indexOf('linux') !== -1;
                var isMac = userAgent.indexOf('mac') !== -1;

                // Highlight appropriate download option
                if (isWindows) {
                    document.getElementById('windows-file').classList.add('active');
                } else if (isLinux) {
                    document.getElementById('linux-file').classList.add('active');
                } else if (isMac) {
                    document.getElementById('mac-file').classList.add('active');
                }
            });
        </script>
    </div>
</div>
