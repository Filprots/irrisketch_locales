<% if ((typeof (switchToGlobalWarning) != "undefined") && switchToGlobalWarning) { %>
    <div class="row mb-n4">
        <div class="col-lg-12 col-sm-12">
            <div class="alert alert-danger alert-dismissible fade show"
                 role="alert">
                <%- __("switchToGlobalWarning") %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
<% } %>
<div class="row mt-4" id="indexPage">
    <div class="col-lg-12 col-sm-12">
        <div class="jumbotron py-4 mb-3">
            <h1 class="display-5 text-center"><%- __("Main_Welcome") %></h1>
            <hr class="my-3">
            <p class="lead"><%- __("Main_ToIrris") %></p>
            <hr class="my-3">
            <% if (user) { %>
                <p><%= __("Main_GetStartedRegistered") %></p>
                <a class="btn btn-success btn-lg mr-2" href="/workshop" role="button">
                    <i class="far fa-briefcase"></i> <%= __("LinkToWorkshop") %></a>
            <% } else { %>
                <p><%= __("Main_GetStartedUnregistered") %></p>
                <a class="btn btn-primary btn-lg mr-2" href="/register" role="button"><%= __("NewUser") %></a>
                <a class="btn btn-primary btn-lg mr-2" href="/login" role="button"><%= __("Sign in") %></a>
            <% } %>
            <p class="mt-3"><%= __("Main_GetStartedLearinig") %></p>
            <a class="btn btn-success btn-lg" href="/tutorials" role="button"><i
                        class="far fa-graduation-cap"></i> <%= __("LinkToLessons") %></a>
        </div>
    </div>
